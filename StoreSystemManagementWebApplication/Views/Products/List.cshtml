@{
}
@model List<StoreSystemManagementWebApplication.Models.Entities.Product>

<div class="mt-3 d-flex justify-content-between align-items-center">
    <h1>Products</h1>
    <a class="btn btn-success" asp-controller="Products" asp-action="Add">
        <i class="fa-solid fa-plus"></i> Add
    </a>
</div>

<table class="table">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model) 
        {  
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.Category</td>
                <td>

                <div class="d-flex  ">
                    <a class="btn btn-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <form asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" method="post">
                        <button type="submit" class="btn btn-danger ms-3" onclick="return confirm('Are you sure you want to delete this product?')">
                            Delete
                        </button>
                    </form>
                </div>
                   

                </td>
            </tr>
        }
    </tbody>
</table>