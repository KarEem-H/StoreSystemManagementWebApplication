@model StoreSystemManagementWebApplication.Models.AddProductViewModel

<h1>Add Product</h1>

<form method="post">


    <div calss="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />

    </div>

    <div calss="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />

    </div>


    <div calss="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" step="any"  />

    </div>

    <div calss="mt-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" />

    </div>

    <div calss="mt-3">
        <label class="form-label">Category</label>
        <input type="text" class="form-control" asp-for="Category" />

    </div>
    <br />
    <div calss="mt-3">
       <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>